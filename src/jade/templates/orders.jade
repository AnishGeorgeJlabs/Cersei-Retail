ion-view(title='Orders')
  ion-nav-buttons(side='right')
    button.button.button-icon.icon.ion-plus-round
  ion-content(padding='true').has-header
    ion-list
      .calm(ng-if='orders.length == 0').wait-message
        i.icon.ion-information-circled.text-large
        br
        | &nbspnothing to show
      .card(ng-repeat='order in orders')
        .item.item-divider
          | {{:: order.order_id }}
          a.badge(ui-sref='orderDetails')
            span details &nbsp
            i.icon.ion-arrow-right-b
        .item.item-text-wrap
          strong address: &nbsp
          span.royal {{:: order.address }}
          br
          strong amount: &nbsp
          span {{:: order.price }}
          br
          strong time: &nbsp
          span {{:: order.timestamp.$date | date : "d MMM, yy hh:mm a" }}
          br
          p {{:: order.item_count }} item{{:: order.item_count > 1?"s":"" }} in order
          //
            button.button.button-stable.button-clear.padding-top
              span details &nbsp
              i.icon.ion-arrow-right-b

